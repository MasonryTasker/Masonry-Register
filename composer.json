{
  "name": "foundry/masonry-register",
  "type": "composer-plugin",
  "description": "This application keeps track of installed modules",
  "minimum-stability": "stable",
  "license": "MIT",
  "authors": [
    {
      "name": "Daniel Mason",
      "email": "daniel.mason@thefoundry.co.uk"
    }
  ],
  "require": {
    "composer-plugin-api": "^1.0",
    "symfony/yaml": "^2.0",
    "foundry/masonry": "dev-develop@dev"
  },
  "require-dev": {
    "phpunit/phpunit": ">=4.8.21",
    "squizlabs/php_codesniffer": "^2.3",
    "phpmd/phpmd": "^2.2",
    "phploc/phploc": "^2.1",
    "pdepend/pdepend": "2.1",
    "sebastian/phpcpd": "^2.0",
    "composer/composer": "^1.0.0@dev"
  },
  "autoload" : {
    "psr-4" : {
      "Foundry\\Masonry\\ModuleRegister\\" : "src/"
    }
  },
  "autoload-dev" : {
    "psr-4" : {
      "Foundry\\Masonry\\ModuleRegister\\Test\\" : "test/"
    }
  },
  "config": {
    "github-protocols": [
      "https"
    ]
  },
  "extra": {
    "class": "Foundry\\Masonry\\ModuleRegister\\Composer\\Plugin"
  },
  "scripts": {
    "quality": [
      "vendor/bin/phpcpd src -q",
      "vendor/bin/phpcs --standard=phpcs.xml src",
      "vendor/bin/phpmd src text phpmd.xml"
    ],
    "quality-fix": [
      "vendor/bin/phpcbf --standard=phpcs.xml src"
    ],
    "test": [
      "vendor/bin/phpunit"
    ],
    "validate-masonry": "Foundry\\Masonry\\ModuleRegister\\Composer\\Plugin::validate"
  }
}
