#!/usr/bin/env php
<?php
/**
 * masonry-register
 * @author    Daniel Mason <daniel.mason@thefoundry.co.uk>
 * @copyright 2016 The Foundry Visionmongers
 * @license   MIT
 * @see       https://github.com/TheFoundryVisionmongers/Masonry-Register
 */

// Find composer autoload.
$autoloadLocations = [
    __DIR__ . '/../../../../../vendor/autoload.php',
    __DIR__ . '/../../../../vendor/autoload.php',
    __DIR__ . '/../../../vendor/autoload.php',
    __DIR__ . '/../../vendor/autoload.php',
    __DIR__ . '/../vendor/autoload.php',
    __DIR__ . '/vendor/autoload.php',
];

$composerLocation = null;
foreach ($autoloadLocations as $location) {
    if (is_file($location)) {
        $composerLocation = $location;
        break;
    }
}

if (!$composerLocation) {
    die('Composer autoload could not be found');
}

// Load it
require_once $composerLocation;

// Start the app
use Foundry\Masonry\ModuleRegister\RegisterCommand;
use Foundry\Masonry\ModuleRegister\ListCommand;
use Symfony\Component\Console\Application;

$application = new Application();
$application->add(new RegisterCommand());
$application->add(new ListCommand());
$application->run();
